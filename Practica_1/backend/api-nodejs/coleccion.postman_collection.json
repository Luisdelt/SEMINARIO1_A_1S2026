{
    "info": {
        "name": "API backend",
        "_postman_id": "catalogo",
        "description": "endpints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "item": [
                {
                    "name": "GET / - Estado de la API",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/",
                        "description": "Verifica que la API esté corriendo correctamente."
                    }
                }
            ]
        },
        {
            "name": "Películas",
            "item": [
                {
                    "name": "GET /movie/exploration - Catálogo completo",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/movie/exploration",
                        "description": "Retorna todas las películas del catálogo con su estado (Disponible / Proximo_Estreno)."
                    }
                }
            ]
        },
        {
            "name": "Usuarios",
            "item": [
                {
                    "name": "POST /user/register - Registrar usuario",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/user/register",
                        "description": "Registra un nuevo usuario. La contraseña se hashea con MD5. La foto es opcional.",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "correo",
                                    "value": "nuevo@correo.com",
                                    "type": "text"
                                },
                                {
                                    "key": "nombre_completo",
                                    "value": "Usuario Prueba",
                                    "type": "text"
                                },
                                {
                                    "key": "contrasena",
                                    "value": "contrasena123",
                                    "type": "text"
                                },
                                {
                                    "key": "confirmar_contrasena",
                                    "value": "contrasena123",
                                    "type": "text"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "POST /user/login - Iniciar sesión",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/user/login",
                        "description": "Autentica al usuario con correo y contraseña.",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"correo\": \"ana.garcia@mail.com\",\n  \"contrasena\": \"contrasena123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "POST /user/logout - Cerrar sesión",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/user/logout",
                        "description": "Cierra la sesión del usuario actual."
                    }
                },
                {
                    "name": "PUT /user/edit - Editar perfil",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/user/edit",
                        "description": "Edita nombre y/o foto de perfil. Requiere la contraseña actual para confirmar identidad.",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "id_usuario",
                                    "value": "1",
                                    "type": "text"
                                },
                                {
                                    "key": "contrasena_actual",
                                    "value": "contrasena123",
                                    "type": "text"
                                },
                                {
                                    "key": "nombre_completo",
                                    "value": "Ana García (editada)",
                                    "type": "text"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Lista de Reproducción",
            "item": [
                {
                    "name": "GET /user/playlist/:id - Ver playlist del usuario",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/user/playlist/1",
                        "description": "Retorna la lista de reproducción del usuario con id=1, ordenada de más reciente a más antigua."
                    }
                },
                {
                    "name": "POST /user/playlist/add - Agregar película",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/user/playlist/add",
                        "description": "Agrega una película disponible a la lista del usuario. Si ya existe, no genera error (INSERT IGNORE).",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"id_usuario\": 1,\n  \"id_pelicula\": 3\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "DELETE /user/playlist/remove - Eliminar película",
                    "request": {
                        "method": "DELETE",
                        "url": "{{base_url}}/user/playlist/remove",
                        "description": "Elimina una película de la lista del usuario.",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"id_usuario\": 1,\n  \"id_pelicula\": 3\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}